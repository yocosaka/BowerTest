<div class="form-group mt-4">
  <%- if controller_name != 'sessions' %>
    <%= link_to 'Sign in', new_session_path(resource_name), class: 'btn btn-light font-16' %><br />
  <% end -%>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to t(".sign_up"), new_registration_path(resource_name), class: 'btn btn-light font-16' %><br />
  <% end -%>
</div>
