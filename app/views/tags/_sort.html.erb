<% if order == 'desc' %>
  <%= link_to tag_path(id: tag.id, sort_by: 'asc'), class: 'sort-by-name' do %>
    Name <%= fa_icon "chevron-up" %>
  <% end %>
<% else %>
  <%= link_to tag_path(id: tag.id, sort_by: 'desc'), class: 'sort-by-name' do %>
    Name <%= fa_icon "chevron-down" %>
  <% end %>
<% end %>
