<%= render "shared/errors", obj: image %>

<%= form_with model: image, multipart: true do |form| %>
  <div class="mb-5">
    <%= form.label 'Title', {class: "form-label"} %>
    <%= form.text_field :name,
    required: true,
    class: 'form-control font-20 rounded-x',
    placeholder: 'Sydney Opera House' %>
  </div>

  <div class="mb-5">
    <%= form.label 'Image', { class: "form-label" } %><br>

    <% if image.file.url %>
      <img src="<%= image.file.url %>" alt="<%= image.name %>" class="image form-image rounded-x d-block text-center m-auto mb-5">
    <% end %>

    <div class="fallback">
      <p>
        <span class="font-20">Drop an image here or<br><span class="underline">Browse from your computer</span></span>
        <%= fa_icon "picture-o" %>
      </p>
      <%= form.file_field :file, class: 'dropzone' %>
    </div>

    <%= form.hidden_field :file_cache %>
  </div>

  <div class="mb-5">
    <%= form.submit btn_msg, class: 'btn btn-dark font-16 float-end p-3 rounded-x shadow-x' %>
  </div>
<% end %>

