<div class="container-lg bg-white rounded-x shadow-x">
  <div class="p-5">
    <div class="heading d-flex align-items-center">
      <h1 class="me-3 fw-normal">Images</h1>
      <%= link_to new_image_path, class:"add-image-icon shadow-x d-flex justify-content-center align-items-center text-dark ms-3" do %>
        <%= fa_icon "plus" %>
      <% end %>
    </div>
  <div>here should be tags</div>
  <%= render "shared/search" %>
  </div>
  <div class="table-responsive">
    <table class="table">
      <thead>
        <tr>
          <th scope="col"></th>
          <th scope="col" class="fw-bold">
            Name <%= fa_icon "chevron-down", class: 'class' %>
          </th>
          <th scope="col">Tags</th>
          <th scope="col">Total Tags</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        <% @images.each do |image| %>
            <tr>
              <td><img src="<%= image.file.url %>" alt="<%= image.name %>" class="images"></td>
              <td class="fw-bold"><%= image.name %></td>
              <td><%= render partial: "tags/tag", collection: image.tags.pluck(:name) %></td>
              <td><%= image.tags.pluck(:name).count %></td>
              <td>
                <ul class="navbar-nav actions-menu">
                  <li class="dropdown">
                    <a class="nav-link dropdown-toggle text-dark rounded-x shadow-x" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                      Actions <%= fa_icon "ellipsis-v", class: 'me-1' %>
                    </a>
                    <ul class="dropdown-menu rounded-x shadow-x border-0">
                      <li><%= link_to 'View', image, class: 'dropdown-item' %></li>
                      <li><%= link_to 'Edit', edit_image_path(image), class: 'dropdown-item' %></li>
                      <li><%= link_to 'Delete', image, method: :delete, data: { confirm: 'Are you sure?' }, class: 'dropdown-item' %></li>
                    </ul>
                  </li>
                </ul>
              </td>
            </tr>
          <% end %>
      </tbody>
    </table>
  </div>
  <%= paginate @images %>
</div>
