<div class="container-lg bg-white rounded shadow px-4 py-4">
  <div class="heading d-flex">
    <h1>Images</h1>
    <%= link_to new_image_path do %>
      <%= fa_icon "plus", class: 'class' %>
    <% end %>
  </div>
  <%= render "tags" %>
  <%= render "common/search" %>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>File</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @images.each do |image| %>
        <tr>
          <td><%= image.name %></td>
          <td><img src="<%= image.file.url %>" alt="<%= image.name %>" class="images"></td>
          <td><%= image.tags.pluck(:name).join(', ') %></td>
          <td><%= link_to 'Show', image %></td>
          <td><%= link_to 'Edit', edit_image_path(image) %></td>
          <td><%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
